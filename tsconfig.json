{
    "compilerOptions": {
        "target": "es2017",
        "module": "es2015",
        "moduleResolution": "node",
        "lib": ["esnext.array", "esnext", "es2017", "dom"],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "inlineSources": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noEmitOnError": true,
        "outDir": "./dist",
        // Only necessary because @types/uglify-js can't find types for source-map
        "baseUrl": ".",
        "rootDir": "./",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    },
    "include": [
        "node_modules/@webcomponents/webcomponentsjs/webcomponents-bundle.d.ts",
        "src/**/*.ts"
    ]
}
